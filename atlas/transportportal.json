{
  "schemaVersion": "v1",
  "type": "Deployment",
  "spec": {
    "name": "transportportal",
    "replicas": 2,
    "strategy": "rolling",
    "image": {
      "type": "GavImageDescriptor",
      "spec": {
        "artifactId": "napt",
        "groupId": "no.vegvesen.vt.transportportal",
        "port": 8080
      }
    },
    "route": {
      "type": "Route",
      "spec": {
        "path": "/",
        "termination": "edge",
        "expose": "external"
      }
    },
    "probes": {
      "readiness": {
        "type": "HttpProbe",
        "spec": {
          "path": "/",
          "initialDelaySeconds": 10
        }
      },
      "liveness": {
        "type": "HttpProbe",
        "spec": {
          "path": "/",
          "initialDelaySeconds": 10
        }
      }
    },
    "resources": [
      {
        "type": "CpuResources",
        "spec": {
          "min": "50m",
          "max": "500m"
        }
      },
      {
        "type": "MemResources",
        "spec": {
          "min": "100M",
          "max": "300M"
        }
      }
    ]
  }
}
